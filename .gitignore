# ============================================================================
# SENSITIVE DATA PROTECTION - NEVER COMMIT REAL HEALTH DATA
# ============================================================================

# Private health data - never commit any real consultation/patient data
data/raw/*.csv
data/raw/*.xlsx
data/raw/*.json
data/raw/*.parquet
data/raw/*health*
data/raw/*consultation*
data/raw/*patient*
data/raw/*imc*

# Processed data - exclude internal/private data but allow synthetic
data/processed/*internal*
data/processed/*private*
data/processed/*imc*
data/processed/*health*
data/processed/*consultation*
data/processed/*patient*
data/processed/syria_processed_dataset.csv
data/processed/merged_dataset.csv
data/processed/feature_pipeline_metadata.joblib
data/processed/*.pkl
data/processed/*.joblib
# Allow synthetic processed data
!data/processed/*synthetic*
!data/processed/.gitkeep

# Internal data - exclude all files but keep folder structure
data/internal/
!data/internal/.gitkeep
!data/internal/*/.gitkeep

# Cache directories with potentially sensitive data
data/cache/*
data/test_cache/*
!data/cache/.gitkeep
!data/test_cache/.gitkeep

